@model BusinessObjects.SystemAccount

@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-4">
    <h2 class="text-center">Profile</h2>

    <div class="card mx-auto mt-3" style="max-width: 500px;">
        <div class="card-body">
            <h4 class="card-title text-center">@Model.AccountName</h4>
            <p class="text-center text-muted">ID: @Model.AccountId</p>

            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Email:</strong> @Model.AccountEmail</li>
                <li class="list-group-item">
                    <strong>Role:</strong> @(Model.AccountRole == 1 ? "Staff" : (Model.AccountRole == 2 ? "Lecturer" : "Admin"))
                    </li>
            </ul>

            <div class="text-center mt-3">
                <a asp-action="EditProfile" class="btn btn-primary">Edit Profile</a>
            </div>
        </div>
    </div>
</div>
