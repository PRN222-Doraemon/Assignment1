@model IEnumerable<SystemAccountVM>

@{
	ViewData["Title"] = "System Accounts";
}

<div class="container">
	<div class="d-flex justify-content-between align-items-center my-4">
		<h1 class="fw-bold text-primary">System Accounts</h1>
		<a asp-action="Create" asp-controller="SystemAccounts" class="btn btn-success">
			<i class="fas fa-user-plus"></i> Create New
		</a>
	</div>

	<div class="table-responsive">
		<table class="table table-striped table-hover shadow-sm rounded">
			<thead class="table-dark">
				<tr>
					<th>Account Name</th>
					<th>Account Email</th>
					<th>Account Role</th>
					<th class="text-center">Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.AccountName</td>
						<td>@item.AccountEmail</td>
						<td>
							<span class="badge @(item.AccountRole == int.Parse(AppCts.Roles.Staff) ? "bg-info" : "bg-warning")">
								@(item.AccountRole == int.Parse(AppCts.Roles.Staff) ? "Staff" : "Lecturer")
							</span>
						</td>
						<td class="text-center">
							<a asp-action="Edit" asp-route-id="@item.AccountId" asp-controller="SystemAccounts" class="btn btn-sm btn-primary">
								<i class="fas fa-edit"></i> Edit
							</a>
							<a asp-action="Delete" asp-route-id="@item.AccountId" asp-controller="SystemAccounts" class="btn btn-sm btn-danger">
								<i class="fas fa-trash"></i> Delete
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
