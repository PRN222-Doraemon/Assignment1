@model SystemAccount

@{
    ViewData["Title"] = "Create System Account";
}

<div class="container mt-4">
    <div class="card shadow-lg rounded">
        <div class="card-header bg-success text-white">
            <h3 class="mb-0"><i class="fas fa-user-plus"></i> Create System Account</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create" asp-controller="SystemAccounts" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="@Model.AccountId" />

                <div class="mb-3">
                    <label asp-for="@Model.AccountName" class="form-label fw-bold"></label>
                    <input asp-for="@Model.AccountName" class="form-control" placeholder="Enter Account Name" />
                    <span asp-validation-for="@Model.AccountName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.AccountEmail" class="form-label fw-bold"></label>
                    <input asp-for="@Model.AccountEmail" class="form-control" type="email" placeholder="Enter Email Address" />
                    <span asp-validation-for="@Model.AccountEmail" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.AccountPassword" class="form-label fw-bold"></label>
                    <input asp-for="@Model.AccountPassword" class="form-control" type="password" placeholder="Enter Password" />
                    <span asp-validation-for="@Model.AccountPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.AccountRole" class="form-label fw-bold"></label>
                    <select asp-for="@Model.AccountRole" asp-items="ViewBag.AccountRoleId" class="form-select">
                        <option value="" disabled selected>Select Role</option>
                    </select>
                    <span asp-validation-for="@Model.AccountRole" class="text-danger"></span>
                </div>

                <div class="d-flex gap-3 mt-4">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-plus"></i> Create Account
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
