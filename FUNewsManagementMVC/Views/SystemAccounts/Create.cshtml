@model SystemAccount

@{
	ViewData["Title"] = "Edit";
}

@* HTML *@

<h1>Create</h1>

<h4>SystemAccount</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create" asp-controller="SystemAccounts" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="@Model.AccountId" />
			<div class="form-group">
				<label asp-for="@Model.AccountName" class="control-label"></label>
				<input asp-for="@Model.AccountName" class="form-control" />
				<span asp-validation-for="@Model.AccountName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="@Model.AccountEmail" class="control-label"></label>
				<input asp-for="@Model.AccountEmail" class="form-control" type="email" />
				<span asp-validation-for="@Model.AccountEmail" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="@Model.AccountPassword" class="control-label"></label>
				<input asp-for="@Model.AccountPassword" class="form-control" type="password" />
				<span asp-validation-for="@Model.AccountPassword" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="@Model.AccountRole" class="control-label"></label>
				<select asp-for="@Model.AccountRole" asp-items="ViewBag.AccountRoleId" class="form-control">
					<option value="" disabled>Select Role</option>
				</select>
			</div>

			<div class="d-flex flex-row gap-2 mt-3">
				<div class="form-group">
					<input type="submit" value="Create" class="btn btn-primary" />
				</div>
				<div>
					<a class="btn btn-primary" asp-action="Index">Back to List</a>
				</div>
			</div>
		</form>
	</div>
</div>



@* Scripts *@

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
