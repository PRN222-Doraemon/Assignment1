@model             Category

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center my-4">Category Details</h1>

<div class="card shadow-lg">
    <div class="card-header bg-primary text-white">
        <h4>Category Information</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 text-end fw-bold">Category Name:</dt>
            <dd class="col-sm-9">@Model.CategoryName</dd>

            <dt class="col-sm-3 text-end fw-bold">Description:</dt>
            <dd class="col-sm-9">@Model.CategoryDesciption</dd>

            <dt class="col-sm-3 text-end fw-bold">Active status:</dt>
            <dd class="col-sm-9">
                <span class="badge @((bool)Model.IsActive ? "bg-success" : "bg-secondary")">
                    @((bool)Model.IsActive ? "Active" : "Inactive")
                </span>
            </dd>

            <dt class="col-sm-3 text-end fw-bold">Parent Category:</dt>
            <dd class="col-sm-9">@Model.ParentCategory?.CategoryName</dd>
        </dl>
    </div>
    <div class="card-footer text-end">
        <a asp-action="Edit" asp-route-id="@Model?.CategoryId" class="btn btn-warning me-2">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>
