@model IEnumerable<Category>

@{
	ViewData["Title"] = "Categories";
}

@* HTML *@

<h1 class="text-center my-4">Categories List</h1>

<div class="text-end mb-3">
	<a asp-action="Create" class="btn btn-primary">Create New</a>
</div>

<table class="table table-bordered table-striped table-hover align-middle">
	<thead class="table-primary">
		<tr>
			<th>@Html.DisplayNameFor(model => model.CategoryName)</th>
			<th>@Html.DisplayNameFor(model => model.CategoryDesciption)</th>
			<th>@Html.DisplayNameFor(model => model.IsActive)</th>
			<th>@Html.DisplayNameFor(model => model.ParentCategory)</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.CategoryName</td>
				<td>@item.CategoryDesciption</td>
				<td>
					<span class="badge @((bool)item.IsActive ? "bg-success" : "bg-secondary")">
						@((bool)item.IsActive ? "Active" : "Inactive")
					</span>
				</td>
				<td>@item.ParentCategory?.CategoryName</td>
				<td>
					<div class="btn-group" role="group">
						<a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-sm btn-warning">
							<i class="fas fa-eye"></i>
						</a>
						<a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-sm btn-info">
							<i class="fas fa-edit"></i>
						</a>
						<a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-sm btn-danger">
							<i class="fas fa-trash-alt"></i>
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>

@* Custom Scripts *@

<script>
	function confirmDelete() {
		return confirm("Are you sure you want to delete this category?");
	}
</script>
